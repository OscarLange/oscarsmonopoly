<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
      <div id="mainDiv">
        <h1 id="mainTitle"><%= title %></h1>
      </div>
      <div id="bodyDiv">
        <% games.forEach(function(game){ %>
            <div class="outerDiv">
            <h2><%= game.name %></h2>
            <div class="innerDiv">
                <label>Bank</label>
                <button>Join Game</button>
                <% Object.keys(game["players"]).forEach(function(playername){ %>
                    <label><%= playername %></label>
                    <button>Join Game</button>
                <% }); %>
            </div>
            </div>
        <% }); %>
      </div>
  </body>
</html>
